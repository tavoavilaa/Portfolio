		 </div>
        {
            pathName === '/'
            ? <Header home="/" about="/about" langCV={cvEn} links={["WORK","ABOUT","RESUME","CONTACT",]}/>
            : pathName === '/about'
            ? <Header home="/" about="/about" langCV={cvEn} links={["WORK","ABOUT","RESUME","CONTACT",]}/>
            : <Header home="/es" about="/sobre-mi" langCV={cv} links={["PORTAFOLIO","SOBRE MÍ","HOJA DE VIDA","CONTACTO",]}/>
