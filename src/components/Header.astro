---
import logo from "../img/logo-g.png";
import cv from "../img/CV-Gustavo-Avila.pdf";
import linkedin from "../img/linkedin.png";
import github from "../img/github.png";

let pathName = Astro.url.pathname;

---
<script>
    const menu = document.querySelector('.menu');
    const checkbox = document.querySelector('input[type="checkbox"]');
    checkbox.addEventListener('change', () => {
    if (checkbox.checked) {
        menu.classList.add('open');
        menu.classList.add('animate__fadeInDown');
    } else {
        
        setTimeout(() => {
            menu.classList.remove('open');
        }, 100);
    }
    });

</script>

<header id="header" class="header container glass animate__animated animate__slideInDown">
    <p class="header__title elemento">
        <a href="/"><img src={logo} alt="logo"></a>
    </p>
    <label for="burger" class="menu-button burger elemento">
        <input id="burger" type="checkbox" />
        <span></span>
        <span></span>
        <span></span>
    </label>
   
    <nav class="menu header__nav-menu animate__animated animate__faster">
        <ul class="header__list">
            <li class="header__link">
                <a class={pathName === '/' ? 'link-active' : ''} href="/">Work</a>
            </li>
            <li class="header__link">
                <a class={pathName.includes('about') ? 'link-active' : ''} href="/about">About</a>
            </li>
            <li class="header__link">
                <a rel="noopener noreferrer" target="_blank" href={cv}>Resume</a>
            </li>
            <li class="header__link">
                <a href="mailto:info.gustavoavila@gmail.com"  rel="noopener noreferrer" target="_blank">Contact</a>
            </li>
        </ul>

        <div class=" header__rrss elemento">
            <a href="https://github.com/tavoavilaa" rel="noopener noreferrer" target="_blank">
                <img src={github} alt="">
            </a>
            <a  href="https://www.linkedin.com/in/gustavo-avila-2a153311b/" rel="noopener noreferrer" target="_blank">
                <img src={linkedin} alt="">
            </a>
        </div>
        
    </nav>

    
    
</header>



<style>
    .container{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    @media (max-width: 991.98px){
    	.container{
            flex-direction: column;
        }
    }
  

    .header{
        padding-top: 8px;
        padding-bottom: 8px;
    }

    .header__title{
        font-size: 1.8rem;
        color: var(--white);
        margin: 0;
    }

    .header__title a{
        display: flex;
        align-items: center;
        column-gap: 16px;
    }

    .header__title a img{
        width: 64px;
    }

    .header__title a{
       text-decoration: none;
       color: var(--white);
    }

    .header__list{
        display: flex;
        justify-content: space-between;
        align-items: center;
        column-gap: 24px;
    }

    @media (max-width: 991.98px){
    	.header__list{
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 0;
        }
    }

    .header__link{
        list-style: none;
    }

    .header__link a{
        text-decoration: none;
        color: var(--white);
        text-transform: uppercase;
        transition: all .3s ease;
    }

    @media (max-width: 991.98px){
    	.header__link{
            margin-bottom: 16px;
        }
    }

    .header__link a:hover{
        text-shadow: 0 0 5px #fff6ff, 0 0 8px #fff6ff;
        transition: all .3s ease;
    }

    .link-active{
        color: var(--primary) !important;
        border-bottom: 1px solid var(--secundary);
        padding: 8px 12px;
    }

    .link-active:hover{
        text-shadow: 0 0 5px var(--terciary), 0 0 8px var(--terciary) !important;
    }

    .header__rrss a img{
        width: 40px;
        margin: 0 4px;
        transition: transform .5s ease;
    }

    .header__rrss a img:hover{
        transform: scale(1.1);
        transition: transform .5s ease;
    }

    .burger {
  position: relative;
  width: 40px;
  height: 30px;
  background: transparent;
  cursor: pointer;
  margin: 24px 0 24px;
  display: none;
}

.burger input {
  display: none;
}

.burger span {
  display: block;
  position: absolute;
  height: 4px;
  width: 100%;
  background: var(--white);
  border-radius: 9px;
  opacity: 1;
  left: 0;
  transform: rotate(0deg);
  transition: .25s ease-in-out;
}

.burger span:nth-of-type(1) {
  top: 0px;
  transform-origin: left center;
}

.burger span:nth-of-type(2) {
  top: 50%;
  transform: translateY(-50%);
  transform-origin: left center;
}

.burger span:nth-of-type(3) {
  top: 100%;
  transform-origin: left center;
  transform: translateY(-100%);
  
}

.burger input:checked ~ span:nth-of-type(1) {
  transform: rotate(45deg);
  top: 0px;
  left: 5px;
  
}

.burger input:checked ~ span:nth-of-type(2) {
  width: 0%;
  opacity: 0;
}

.burger input:checked ~ span:nth-of-type(3) {
  transform: rotate(-45deg);
  top: 28px;
  left: 5px;
}
.header__nav-menu {
    display: flex;
    justify-content: space-between;
    gap: 40px;
}

@media screen and (max-width: 991.98px) {
        .header__nav-menu {
            display: none;
        }

        .open{
            display: block;
        }

        .header{
            display: grid;
            grid-template-areas:
            "a b"
            "c c"
            "d d";
            place-items: center;
        }

        .header__nav-menu{
            grid-area: a;
        }

        .burger {
            display: block;
            grid-area: b;
        }

        .header__nav-menu{
            grid-area: c;
        }

        .header__rrss{
            grid-area: d;
            margin-bottom: 16px;
        }

    }

</style>
