---

<section class="container-fluid projects animate__animated animate__slideInUp animate__delay-2s	3s">
  {
    data?.map((project) => (
      <div class="glass projects__card">
        <img class="projects__img" src={project.image} alt={project.name} />
        <h3 class="projects__title">{project.name}</h3>
        <div class="projects__info">
          <div class="projects__languages">
            <img class="projects__icon" src={project.language[0]} alt="" />
            <img class="projects__icon" src={project.language[1]} alt="" />
            <img class="projects__icon" src={project.language[2]} alt="" />
            <img class="projects__icon" src={project.language[3]} alt="" />
            {project.language[4] && <img class="projects__icon" src={project.language[4]} alt="" />}
          </div>
          <a href={project.url} class="btn__primary" rel="noopener noreferrer" target="_blank">View more â†’</a>
        </div>
      </div>
    ))
  }
</section>

<style>
  .projects {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    justify-content: space-between;
    gap: 24px;
    box-sizing: border-box;
    padding: 0;
  }

  @media (max-width: 991.98px){
  	.projects {
      grid-template-columns: 1fr;
    }
  }

  .projects__img {
    width: 100%;
    border-radius: 16px 16px 0 0;
  }

  .projects__card {
    padding-bottom: 40px;
  }
  .projects__title {
    color: var(--white);
    text-align: center;
  }

  .projects__info{
    text-align: center;
  }

  .projects__languages{
    margin-bottom: 24px;
  }

  .projects__icon {
    width: 32px;
  }
</style>
